@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<div role="main" class="main">
	<div class="owl-carousel owl-carousel-light owl-carousel-light-init-fadeIn owl-theme manual dots-inside dots-horizontal-center show-dots-hover nav-inside nav-inside-plus nav-dark nav-md nav-font-size-md show-nav-hover mb-0" data-plugin-options="{'autoplayTimeout': 7000}" data-dynamic-height="['670px','670px','670px','550px','500px']" style="height: 670px;">
		<div class="owl-stage-outer">
			<div class="owl-stage">
				
				<!-- Carousel Slide 1 -->
				<div class="owl-item position-relative overlay-show overlay-op-8 lazyload" data-bg-src="img/slides/social_network.001.png" style="background-size: cover; background-position: center; background-color: #ffffff">
					<div class="container position-relative z-index-3 h-100">
						<div class="row align-items-center h-100">
							<div class="col-lg-6">
								<div class="d-flex flex-column align-items-center justify-content-center">
									<h3 class="position-relative text-color-dark text-5 line-height-5 font-weight-medium px-4 mb-2 appear-animation" data-appear-animation="fadeInDownShorter" data-plugin-options="{'minWindowWidth': 0}">
										<span class="position-absolute right-100pct top-50pct transform3dy-n50 opacity-3">
											<img src="img/lazy.png" data-src="img/slides/slide-title-border.png" class="w-auto appear-animation lazyload" data-appear-animation="fadeInLeftShorter" data-appear-animation-delay="250" data-plugin-options="{'imgFluid': false, 'minWindowWidth': 0}" alt="" />
										</span>
										EEN NIEUWE OPDRACHT ZONDER TUSSENBURO
										<span class="position-absolute left-100pct top-50pct transform3dy-n50 opacity-3">
											<img src="img/lazy.png" data-src="img/slides/slide-title-border.png" class="w-auto appear-animation lazyload" data-appear-animation="fadeInRightShorter" data-appear-animation-delay="250" data-plugin-options="{'imgFluid': false, 'minWindowWidth': 0}" alt="" />
										</span>
									</h3>
									<h2 class="text-color-dark font-weight-extra-bold text-12 mb-3 appear-animation" data-appear-animation="blurIn" data-appear-animation-delay="500" data-plugin-options="{'minWindowWidth': 0}">Het kan met hulp van collega freelancers</h2>
									<p class="text-4 text-color-dark font-weight-light opacity-7 text-center mb-0" data-plugin-animated-letters data-plugin-options="{'startDelay': 1000, 'minWindowWidth': 0, 'animationSpeed': 30}">Eenvoudig en tegen een <strong class="text-color-light">eerlijke</strong> prijs</p>
								</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Carousel Slide 2 -->
                <div class="owl-item position-relative overlay-show overlay-op-8 lazyload" data-bg-src="img/slides/communication.001.png" style="background-size: cover; background-position: center;">
                	<div class="container position-relative z-index-3 h-100">
                		<div class="row align-items-center h-100">
                			<div class="col-lg-6">
                				<div class="d-flex flex-column align-items-center justify-content-center">
                					<h3 class="position-relative text-color-dark text-5 line-height-5 font-weight-medium px-4 mb-2 appear-animation" data-appear-animation="fadeInDownShorter" data-plugin-options="{'minWindowWidth': 0}">
                						<span class="position-absolute right-100pct top-50pct transform3dy-n50 opacity-3">
                							<img src="img/lazy.png" data-src="img/slides/slide-title-border.png" class="w-auto appear-animation lazyload" data-appear-animation="fadeInLeftShorter" data-appear-animation-delay="250" data-plugin-options="{'imgFluid': false, 'minWindowWidth': 0}" alt="" />
                						</span>
                						DEEL OPPORTUNITIES BIJ JE HUIDIGE KLANT
                						<span class="position-absolute left-100pct top-50pct transform3dy-n50 opacity-3">
                							<img src="img/lazy.png" data-src="img/slides/slide-title-border.png" class="w-auto appear-animation lazyload" data-appear-animation="fadeInRightShorter" data-appear-animation-delay="250" data-plugin-options="{'imgFluid': false, 'minWindowWidth': 0}" alt="" />
                						</span>
                					</h3>
                					<h2 class="text-color-dark font-weight-extra-bold text-12 mb-3 appear-animation" data-appear-animation="blurIn" data-appear-animation-delay="500" data-plugin-options="{'minWindowWidth': 0}">met andere freelancers</h2>
                					<p class="text-4 text-color-dark font-weight-light opacity-7 text-center mb-0" data-plugin-animated-letters data-plugin-options="{'startDelay': 1000, 'minWindowWidth': 0, 'animationSpeed': 30}">Eenvoudig en tegen een <strong class="text-color-light">vaste</strong> vergoeding</p>
                				</div>
                			</div>
                		</div>
                	</div>
                </div>
			
				<!-- Carousel Slide 3 -->
                <div class="owl-item position-relative overlay-show overlay-op-8 lazyload" data-bg-src="img/slides/diverse_group.001.png" style="background-size: cover; background-position: center;">
                    <div class="container position-relative z-index-3 h-100">
                        <div class="row align-items-center h-100">
                            <div class="col-lg-6">
                                <div class="d-flex flex-column align-items-center justify-content-center">
                                	<h3 class="position-relative text-color-dark text-5 line-height-5 font-weight-medium px-4 mb-2 appear-animation" data-appear-animation="fadeInDownShorter" data-plugin-options="{'minWindowWidth': 0}">
                                		<span class="position-absolute right-100pct top-50pct transform3dy-n50 opacity-3">
                                			<img src="img/lazy.png" data-src="img/slides/slide-title-border.png" class="w-auto appear-animation lazyload" data-appear-animation="fadeInLeftShorter" data-appear-animation-delay="250" data-plugin-options="{'imgFluid': false, 'minWindowWidth': 0}" alt="" />
                                		</span>
                                		Je CV gaat <b>direct</b> naar de freelancer die bij de klant zit
                                		<span class="position-absolute left-100pct top-50pct transform3dy-n50 opacity-3">
                                			<img src="img/lazy.png" data-src="img/slides/slide-title-border.png" class="w-auto appear-animation lazyload" data-appear-animation="fadeInRightShorter" data-appear-animation-delay="250" data-plugin-options="{'imgFluid': false, 'minWindowWidth': 0}" alt="" />
                                		</span>
                                	</h3>
                                	<h2 class="text-color-dark font-weight-extra-bold text-12 mb-3 appear-animation" data-appear-animation="blurIn" data-appear-animation-delay="500" data-plugin-options="{'minWindowWidth': 0}"><b>No cure-no pay</b></h2>
                                	<p class="text-4 text-color-dark font-weight-light opacity-7 text-center mb-0" data-plugin-animated-letters data-plugin-options="{'startDelay': 2000, 'minWindowWidth': 0, 'animationSpeed': 30}">De plaatser bepaalt hoe veel je betaalt als je de opdracht krijgt</p>
									<p class="text-4 text-color-dark font-weight-light opacity-7 text-center mb-0" data-plugin-animated-letters data-plugin-options="{'startDelay': 4000, 'minWindowWidth': 0, 'animationSpeed': 30}">Je facturen stuur je altijd direct naar de klant</p>
	                            </div>
                            </div>
                        </div>
                    </div>
                </div>
				
			</div>
		</div>
